@{
    ViewData["Title"] = "Subir PDF";
    Layout = "_Layout";
}

@section Styles {
    <style>
        body {
            background-color: #f5f5f5;
        }

        .subir-pdf-container {
            max-width: 600px;
            margin: 60px auto;
            padding: 40px;
            background: white;
            border-radius: 12px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        }

        .subir-pdf-container h2 {
            font-size: 1.8rem;
            color: #b80000;
            margin-bottom: 25px;
            font-weight: bold;
            text-align: center;
        }

        .form-group label {
            font-weight: bold;
        }

        .alert {
            text-align: center;
        }
    </style>
}

<div class="subir-pdf-container">
    <h2>Subir nuevo archivo PDF</h2>

    <form asp-controller="Contenido" asp-action="SubirPdf" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label for="pdfFile">Selecciona un archivo PDF:</label>
            <input type="file" name="pdfFile" accept=".pdf" class="form-control" required />
        </div>
        <div class="d-flex justify-content-between mt-4">
            <button type="submit" class="btn btn-success">Subir</button>
            <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>

    @if (ViewBag.Mensaje != null)
    {
        <div class="alert alert-info mt-4">
            @ViewBag.Mensaje
        </div>
    }
</div>
