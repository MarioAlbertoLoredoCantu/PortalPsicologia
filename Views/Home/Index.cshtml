@using Microsoft.AspNetCore.Authentication 
@using Microsoft.AspNetCore.Authentication.Cookies
@using Microsoft.AspNetCore.Authentication.Google

@{
    ViewData["Title"] = "Inicio";
    Layout = "_Layout";
    var rol = Context.Session.GetString("UsuarioRol");
    var isLoggedIn = User.Identity.IsAuthenticated;
}

@section Styles {
    <style>
        body {
            background-image: url('/img/fondoUn1.png');
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
            margin: 0;
            font-family: 'Segoe UI', sans-serif;
        }

        .hero {
            height: 45vh; /* Altura reducida */
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
            text-align: center;
            color: white;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.7);
            padding: 20px 10px;
        }

        .hero h1 {
            font-size: 2.8em;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .hero p {
            font-size: 1.1em;
            max-width: 800px;
            margin: 0;
        }

        .contenedor {
            max-width: 900px;
            margin: 0 auto;
            margin-top: -40px; /* Superposición leve hacia la hero */
            padding: 25px;
            background: rgba(255, 255, 255, 0.97);
            border: 2px solid #b80000;
            border-radius: 16px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            text-align: center;
        }

        .contenedor h2 {
            color: #b80000;
            font-size: 1.8rem;
            margin-bottom: 10px;
        }

        .contenedor p {
            margin: 0;
            margin-bottom: 20px;
            color: #333;
        }

        .boton-principal {
            background-color: #b80000;
            color: white;
            padding: 12px 30px;
            font-size: 1.1rem;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            text-decoration: none;
            display: inline-block;
            margin: 8px;
        }

        .boton-principal:hover {
            background-color: #920000;
        }

        .boton-secundario {
            background-color: #444;
            color: white;
            padding: 10px 26px;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            font-size: 1rem;
            margin-top: 15px;
        }

        .boton-secundario:hover {
            background-color: #222;
        }
    </style>
}

<div class="hero">
    <h1>Bienvenido al Examen Psicométrico</h1>
    <p>
        La Universidad del Norte te acompaña en la elección de tu camino profesional, con base en tus intereses, valores y habilidades.
    </p>
</div>

<div class="contenedor">
    <h2>¿Estás listo para comenzar?</h2>

    @if (!isLoggedIn)
    {
        <a class="boton-principal" href="/login/google">Iniciar sesión con Google</a>
    }
    else
    {
        <p>Hola, <strong>@User.Identity.Name</strong></p>
        <a href="/ExamenPsico/Iniciar" class="boton-principal">Iniciar Examen</a>

        <form method="post" action="/login/logout">
            <button type="submit" class="boton-secundario">Cerrar sesión</button>
        </form>
    }
</div>

