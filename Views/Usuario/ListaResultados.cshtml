@model List<PortalPsicologia.Models.ResultadoDetalleViewModel>

@{
    ViewData["Title"] = "Resultados de Exámenes";
}

<h2>Resultados de Exámenes</h2>

<!-- ✅ Agregamos ID a la tabla para usar DataTables -->
<table id="tablaResultados" class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Correo</th>
            <th>Matrícula</th>
            <th>Puntaje</th>
            <th>Diagnóstico</th>
            <th>Fecha</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <td>@r.ResultadoId</td>
                <td>@r.Nombre</td>
                <td>@r.Correo</td>
                <td>@r.Matricula</td>
                <td>@r.PuntajeTotal</td>
                <td>@r.Diagnostico</td>
                <td>@r.Fecha.ToString("dd/MM/yyyy HH:mm")</td>
            </tr>
        }
    </tbody>
</table>

@section Styles {
    <!-- ✅ CSS de DataTables -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />
}

@section Scripts {
    <!-- ✅ jQuery y DataTables -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#tablaResultados').DataTable({
                language: {
                    url: 'https://cdn.datatables.net/plug-ins/1.13.6/i18n/es-ES.json'
                }
            });
        });
    </script>
}
