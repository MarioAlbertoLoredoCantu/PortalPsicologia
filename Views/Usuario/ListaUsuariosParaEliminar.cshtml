@model List<PortalPsicologia.Models.Usuario>

@{
    ViewData["Title"] = "Eliminar Usuarios";
}

<style>
    .tabla-container {
        margin-top: 30px;
        background-color: #fff;
        padding: 25px;
        border-radius: 14px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.07);
        border: 2px solid #b80000;
    }

    .tabla-container h2 {
        color: #b80000;
        font-weight: bold;
        margin-bottom: 25px;
    }

    .table th, .table td {
        vertical-align: middle;
    }

    .btn-eliminar {
        background-color: #dc3545;
        border: none;
        border-radius: 6px;
        padding: 6px 12px;
        color: white;
    }

    .btn-eliminar:hover {
        background-color: #bb2d3b;
    }

    .alert {
        border-radius: 10px;
        font-size: 1rem;
        text-align: center;
    }
</style>

<div class="tabla-container">
    <h2>Eliminar Usuarios</h2>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Correo</th>
                <th>Matrícula</th>
                <th>Rol</th>
                <th>Acción</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var u in Model)
            {
                <tr>
                    <td>@u.UsuarioId</td>
                    <td>@u.Nombre</td>
                    <td>@u.Correo</td>
                    <td>@u.Matricula</td>
                    <td>@u.Rol</td>
                    <td>
                        @if (Context.Session.GetInt32("UsuarioId") != u.UsuarioId)
                        {
                            <form asp-action="EliminarUsuario" asp-controller="Usuario" method="post" style="display:inline;">
                                <input type="hidden" name="id" value="@u.UsuarioId" />
                                <button type="submit" class="btn btn-eliminar btn-sm" onclick="return confirm('¿Estás seguro de eliminar este usuario?');">Eliminar</button>
                            </form>
                        }
                        else
                        {
                            <span class="text-muted">No puedes eliminarte a ti mismo</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
