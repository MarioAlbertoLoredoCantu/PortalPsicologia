@model IEnumerable<PortalPsicologia.Models.Usuario>

@{
    ViewData["Title"] = "Lista de Usuarios";
}

<style>
  body {
    background-image: url('/img/fondoUn1.png'); /* cambia a tu ruta */
    background-size: cover;
    background-position: center;
    background-attachment: fixed;
}

    .tabla-container {
        margin-top: 30px;
        background-color: rgba(255, 255, 255, 0.95);
        padding: 25px;
        border-radius: 14px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.07);
        border: 2px solid #b80000;
    }

    .tabla-container h2 {
        color: #b80000;
        font-weight: bold;
        margin-bottom: 25px;
    }

    .table {
        border-radius: 10px;
        overflow: hidden;
    }

    .table th,
    .table td {
        vertical-align: middle;
    }

    .btn-editar {
        background-color: #ffc107;
        color: black;
        border: none;
        border-radius: 6px;
        padding: 6px 12px;
    }

    .btn-editar:hover {
        background-color: #e0a800;
    }

    .alert {
        border-radius: 10px;
        font-size: 1rem;
        text-align: center;
    }
</style>

<div class="tabla-container">
    <h2>Lista de Usuarios</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <table id="tablaUsuarios" class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>Nombre</th>
                <th>Correo</th>
                <th>Matr√≠cula</th>
                <th>Rol</th>
                @if (Context.Session.GetString("UsuarioRol") == "Administrador")
                {
                    <th>Acciones</th>
                }
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var usuario in Model)
                {
                    <tr>
                        <td>@usuario.Nombre</td>
                        <td>@usuario.Correo</td>
                        <td>@usuario.Matricula</td>
                        <td>@usuario.Rol</td>
                        @if (Context.Session.GetString("UsuarioRol") == "Administrador")
                        {
                            <td>
                                <a asp-action="EditarUsuario" asp-route-id="@usuario.UsuarioId" class="btn btn-editar btn-sm">Editar</a>
                            </td>
                        }
                    </tr>
                }
            }
            else
            {
                <tr><td colspan="5" class="text-center">No hay usuarios registrados.</td></tr>
            }
        </tbody>
    </table>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />
}

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#tablaUsuarios').DataTable({
                language: {
                    url: 'https://cdn.datatables.net/plug-ins/1.13.6/i18n/es-ES.json'
                }
            });
        });
    </script>
}
